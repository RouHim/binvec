# Maintainer: RouHim

pkgname=binvec-bin
pkgver=0.1.0
pkgrel=1
pkgdesc="A simple application to convert raster graphics to vector graphics (pre-compiled binary)"
arch=('x86_64' 'aarch64' 'armv7h' 'armv6h' 'riscv64')
url="https://github.com/RouHim/binvec"
license=('MIT')
depends=()
provides=('binvec')
conflicts=('binvec')
source_x86_64=("$pkgname-$pkgver-x86_64::https://github.com/RouHim/binvec/releases/download/v$pkgver/binvec")
source_aarch64=("$pkgname-$pkgver-aarch64::https://github.com/RouHim/binvec/releases/download/v$pkgver/binvec")
source_armv7h=("$pkgname-$pkgver-armv7h::https://github.com/RouHim/binvec/releases/download/v$pkgver/binvec")
source_armv6h=("$pkgname-$pkgver-armv6h::https://github.com/RouHim/binvec/releases/download/v$pkgver/binvec")
source_riscv64=("$pkgname-$pkgver-riscv64::https://github.com/RouHim/binvec/releases/download/v$pkgver/binvec")
source=("https://raw.githubusercontent.com/RouHim/binvec/v$pkgver/README.md"
        "https://raw.githubusercontent.com/RouHim/binvec/v$pkgver/CHANGELOG.md"
        "https://raw.githubusercontent.com/RouHim/binvec/v$pkgver/LICENSE")
sha256sums=('SKIP' 'SKIP' 'SKIP')
sha256sums_x86_64=('SKIP')
sha256sums_aarch64=('SKIP')
sha256sums_armv7h=('SKIP')
sha256sums_armv6h=('SKIP')
sha256sums_riscv64=('SKIP')

package() {
  # Install binary
  install -Dm755 "$pkgname-$pkgver-$CARCH" "$pkgdir/usr/bin/binvec"

  # Install documentation
  install -Dm644 "README.md" "$pkgdir/usr/share/doc/binvec/README.md"
  install -Dm644 "CHANGELOG.md" "$pkgdir/usr/share/doc/binvec/CHANGELOG.md"

  # Install license
  install -Dm644 "LICENSE" "$pkgdir/usr/share/licenses/binvec/LICENSE"
}
